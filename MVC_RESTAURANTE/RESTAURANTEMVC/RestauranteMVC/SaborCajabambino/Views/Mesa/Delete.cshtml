@model SaborCajabambino.Models.Mesa

@{
	ViewData["Title"] = "Delete";
}
<link href="~/css/deleteStyle.css" rel="stylesheet" />
<div class="d-flex justify-content-center"><span class="badge bg-danger my-1 rounded "><h3>¿Estás seguro que quieres eliminar este registro?</h3></span></div>

<div class="d-flex justify-content-center align-items-center">
	<div class="card shadow">
		<div class="card-header">
			<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
				<span class="badge bg-warning rounded"><h4>Mesa - @Model.IdMesa</h4></span>
			</span>
		</div>
		<div class="card-body">
			<div>
				<dl class="row">
					<dt class="col-sm-6">
						Capacidad
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Capacidad)
					</dd>
					<dt class="col-sm-6">
						Ubicación
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Ubicacion)
					</dd>
					<dt class="col-sm-6">
						Estado
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Estado)
					</dd>
				</dl>

				<form asp-action="Delete">
					<input type="hidden" asp-for="IdMesa" />
					<input type="submit" value="Eliminar" class="btn btn-danger" /> 
				</form>
				<p class="mt-3"><strong>Nota:</strong> Esta acción no se puede deshacer.</p>
					<span class="badge badge-status bg-warning"><a asp-action="Index">Volver a la lista de empleados</a></span>
			</div>
		</div>
	</div>
</div>