@{
	ViewData["Title"] = "Login";
	Layout = null;
}
<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=0.1" />
		<title>@ViewData["Title"] - El Sabor Cajabambino</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/loginStyle.css" />
		<link rel="stylesheet" href="~/SaborCajabambino.styles.css" asp-append-version="true" />
	</head>
	<body>
		<div class="login-card">
			<div class="login-header">
				<a href="@Url.Action("Index", "Home")">
					<img src="~/img/logo.jpg" alt="Logo" width="48" height="48">
				</a>
				<h1 class="mt-3">Empleados Login</h1>
				<p>Bienvenido! Por favor, ingresa tus credenciales.<p>
			</div>
			<form>
				<div class="mb-3">
					<input type="text" class="form-control" placeholder="Usuario" required />
				</div>
				<div class="mb-3">
					<input type="password" class="form-control" placeholder="Contraseña" required>
				</div>
				<div class="d-flex justify-content-between align-items-center mb-4">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="recordar">
						<label class="form-check-label" for="recordar">
							Recordar contraseña 
						</label>
					</div>
					<a href="#">  ¿Olvidaste tu contraseña?</a>
				</div>
				<button type="submit" class="btn btn-login">Ingresar</button>
			</form>

		</div>
		
	</body>
</html>
