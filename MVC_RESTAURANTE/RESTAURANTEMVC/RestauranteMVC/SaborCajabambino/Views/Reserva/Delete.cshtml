@model SaborCajabambino.Models.Reserva

@{
	ViewData["Title"] = "Delete";
}
<link href="~/css/deleteStyle.css" rel="stylesheet" />
<div class="d-flex justify-content-center"><span class="badge bg-danger my-1 rounded"><h3>¿Estás seguro que quieres eliminar este registro?</h3></span></div>

<div class="d-flex justify-content-center align-items-center">
	<div class="card shadow">
		<div class="card-header">
			<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
				<span class="badge bg-warning rounded"><h4>Reserva - @Model.IdReserva</h4></span>
			</span>
		</div>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.Fecha)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.Fecha)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.Hora)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.Hora)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.NumeroPersonas)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.NumeroPersonas)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.Estado)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.Estado)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.Comentarios)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.Comentarios)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.IdClienteNavigation)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
				</dd>
				<dt class="col-sm-6">
					@Html.DisplayNameFor(model => model.IdMesaNavigation)
				</dt>
				<dd class="col-sm-6">
					@Html.DisplayFor(model => model.IdMesaNavigation.IdMesa)
				</dd>
			</dl>

			<form asp-action="Delete">
				<input type="hidden" asp-for="IdReserva" />
				<input type="submit" value="Eliminar" class="btn btn-danger" />
			</form>
			<p class="mt-3"><strong>Nota:</strong> Esta acción no se puede deshacer.</p>
			<span class="badge badge-status bg-warning"><a asp-action="Index">Volver a la lista de empleados</a></span>
		</div>
	</div>
</div>