@model SaborCajabambino.Models.Reserva

@{
	ViewData["Title"] = "Create";
}


<hr />
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow">
				<div class="card-header">
					<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
						<h4>Nuevo empleado</h4>
					</span>
				</div>
				<div class="card-body">
					<form asp-action="Create">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="row">
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="Fecha" class="control-label"></label>
								<input asp-for="Fecha" class="form-control" />
								<span asp-validation-for="Fecha" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="Hora" class="control-label"></label>
								<input asp-for="Hora" class="form-control" />
								<span asp-validation-for="Hora" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="IdMesa" class="control-label"></label>
								<select asp-for="IdMesa" class="form-control" asp-items="ViewBag.IdMesa"></select>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="IdCliente" class="control-label"></label>
								<select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="NumeroPersonas" class="control-label"></label>
								<input asp-for="NumeroPersonas" class="form-control" />
								<span asp-validation-for="NumeroPersonas" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="Estado" class="control-label"></label>
								<input asp-for="Estado" class="form-control" />
								<span asp-validation-for="Estado" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3"">
								<label asp-for="Comentarios" class="control-label"></label>
								<input asp-for="Comentarios" class="form-control" />
								<span asp-validation-for="Comentarios" class="text-danger"></span>
							</div>

						</div>						
							<div class="form-group col-md-6 mb-3"">
								<input type="submit" value="Crear" class="btn btn-primary" />
							</div>
					</form>
					<span class="badge badge-status bg-warning">
						<a asp-action="Index">Volver a la lista de empleados</a>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
