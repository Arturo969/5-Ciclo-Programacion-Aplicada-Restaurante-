@model SaborCajabambino.Models.Producto

@{
	ViewData["Title"] = "Delete";
}

<link href="~/css/deleteStyle.css" rel="stylesheet" />
<div class="d-flex justify-content-center"><span class="badge bg-danger my-1 rounded"><h3>¿Estás seguro que quieres eliminar este registro?</h3></span></div>

<div class="d-flex justify-content-center align-items-center">
	<div class="card shadow">
		<div class="card-header">
			<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
				<span class="badge bg-warning rounded"><h4>Producto - @Model.IdProducto</h4></span>
			</span>
		</div>
		<div class="card-body">
			<div>

				<dl class="row">
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.Nombre)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Nombre)
					</dd>
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.Precio)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Precio)
					</dd>
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.Descripcion)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Descripcion)
					</dd>
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.Foto)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Foto)
					</dd>
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.EsPreparado)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.EsPreparado)
					</dd>
					<dt class="col-sm-6">
						@Html.DisplayNameFor(model => model.IdCategoriaNavigation)
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.IdCategoriaNavigation.IdCategoria)
					</dd>
				</dl>

				<form asp-action="Delete">
					<input type="hidden" asp-for="IdProducto" />
					<input type="submit" value="Eliminar" class="btn btn-danger" />
				</form>
				<p class="mt-3"><strong>Nota:</strong> Esta acción no se puede deshacer.</p>
				<span class="badge badge-status bg-warning"><a asp-action="Index">Volver a la lista de productos</a></span>
			</div>

		</div>
	</div>
</div>
