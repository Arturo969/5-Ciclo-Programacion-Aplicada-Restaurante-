@model SaborCajabambino.Models.Empleado

@{
	ViewData["Title"] = "Delete";
}
<link href="~/css/deleteStyle.css" rel="stylesheet" />
<div class="d-flex justify-content-center"><span class="badge bg-danger my-1 rounded"><h3>¿Estás seguro que quieres eliminar este registro?</h3></span></div>

<div class="d-flex justify-content-center align-items-center min-vh-100">
	<div class="card shadow">
		<div class="card-header">
			<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
				<span class="badge bg-warning rounded"><h4>Empleado - @Model.IdEmpleado</h4></span>
			</span>
		</div>
		<div class="card-body">
			<div>

				<dl class="row">
					<dt class="col-sm-6">
						Nombres
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.NombreCompleto)
					</dd>
					<dt class="col-sm-6">
						DNI
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Dni)
					</dd>
					<dt class="col-sm-6">
						Fecha de Nacimiento
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.FechaNacimiento)
					</dd>
					<dt class="col-sm-6">
						Dirección
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Direccion)
					</dd>
					<dt class="col-sm-6">
						Teléfono
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Telefono)
					</dd>
					<dt class="col-sm-6">
						Correo electrónico
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.CorreoElectronico)
					</dd>
					<dt class="col-sm-6">
						Rol
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Rol)
					</dd>
					<dt class="col-sm-6">
						Turno
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Turno)
					</dd>
					<dt class="col-sm-6">
						Fecha de Contratación
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.FechaContratacion)
					</dd>
					<dt class="col-sm-6">
						Salario
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Salario)
					</dd>
					<dt class="col-sm-6">
						Estado
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Estado)
					</dd>
					<dt class="col-sm-6">
						Usuario
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Usuario)
					</dd>
					<dt class="col-sm-6">
						Contraseña
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Contrasena)
					</dd>
				</dl>

				<form asp-action="Delete">
					<input type="hidden" asp-for="IdEmpleado" />
					<input type="submit" value="Eliminar" class="btn btn-danger" />
				</form>
				<p class="mt-3"><strong>Nota:</strong> Esta acción no se puede deshacer.</p>
				<span class="badge badge-status bg-warning"><a asp-action="Index">Volver a la lista de empleados</a></span>
			</div>
		</div>

	</div>
</div>

