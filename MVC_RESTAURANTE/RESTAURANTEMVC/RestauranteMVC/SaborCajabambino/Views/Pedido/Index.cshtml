@model IEnumerable<SaborCajabambino.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}
<style>
    /* Estilo para los badges de estado */
    .badge-status {
        font-weight: normal;
        padding: 0.5em 0.8em;
        border-radius: 50rem;
    }

    a {
        text-decoration: none;
        color: white;
    }

        a:hover {
            text-decoration: none;
            color: black;
        }

</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <div class="table-responsive-md" style=" max-height: 550px; overflow-y: auto;">
        <table class="table table-hover">
            <thead class="table-dark sticky-top">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DireccionEntrega)
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Empleado
                </th>
                <th>
                    Mesa
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {   
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionEntrega)
                    </td>
                    <td>
                        @($"{item.IdClienteNavigation.Nombres} {item.IdClienteNavigation.ApellidoPaterno} {item.IdClienteNavigation.ApellidoMaterno}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMesaNavigation.IdMesa)
                    </td>
                    <td>
                        <span class="badge badge-status bg-warning text-dark"><a asp-action="Edit" asp-route-id="@item.IdPedido">Edit</a></span>
                        <span class="badge badge-status bg-info text-dark">
                            <a asp-action="Details" asp-route-id="@item.IdPedido">Details</a>
                        </span>
                        <span class="badge badge-status bg-danger text-dark"><a asp-action="Delete" asp-route-id="@item.IdPedido">Delete</a></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

