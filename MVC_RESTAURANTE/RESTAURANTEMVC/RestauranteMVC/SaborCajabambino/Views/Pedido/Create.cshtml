@model SaborCajabambino.Models.Pedido

@{
	ViewData["Title"] = "Create";
}



<hr />
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow">
				<div class="card-header">
					<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
						<h4>Nuevo Pedido</h4>
					</span>
				</div>
				<div class="card-body">
					<form asp-action="Create">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="row">
							<div class="form-group col-md-6 mb-3">
								<label asp-for="Fecha" class="control-label"></label>
								<input asp-for="Fecha" class="form-control" type="date" />
								<span asp-validation-for="Fecha" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3">
								<label asp-for="Hora" class="control-label"></label>
								<input asp-for="Hora" class="form-control" type="time" />
								<span asp-validation-for="Hora" class="text-danger"></span>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-6 mb-3">
								<label asp-for="Estado" class="control-label"></label>
								<select asp-for="Estado" class="form-control">
									<option value="">-- Seleccione el estado --</option>
									<option value="Completado">Completado</option>
									<option value="En Proceso">En Proceso</option>
									<option value="Cancelado">Cancelado</option>
								</select>
								<span asp-validation-for="Estado" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3">
								<label asp-for="IdMesa" class="control-label"></label>
								<select asp-for="IdMesa" class="form-control" asp-items="ViewBag.IdMesa"></select>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-6 mb-3">
								<label asp-for="IdCliente" class="control-label"></label>
								<select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
							</div>
							<div class="form-group col-md-6 mb-3">
								<label asp-for="IdEmpleado" class="control-label"></label>
								<select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado"></select>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-6 mb-3">
								<label asp-for="TipoPedido" class="control-label"></label>
								<select asp-for="TipoPedido" class="form-control">
									<option value="">-- Seleccione tipo de pedido --</option>
									<option value="Delivery">Delivery</option>
									<option value="Mesa">Atención en local</option>
									<option value="Llevar">Recoger en local</option>
								</select>
								<span asp-validation-for="TipoPedido" class="text-danger"></span>
							</div>
							<div class="form-group col-md-6 mb-3">
								<label asp-for="DireccionEntrega" class="control-label"></label>
								<input asp-for="DireccionEntrega" class="form-control" />
								<span asp-validation-for="DireccionEntrega" class="text-danger"></span>
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-12 mb-3">
								<label asp-for="Comentarios" class="control-label"></label>
								<textarea asp-for="Comentarios" class="form-control" placeholder="Comentarios..."></textarea>
								<span asp-validation-for="Comentarios" class="text-danger"></span>
							</div>							
						</div>
						<div class="form-group col-md-6 mb-3">
							<input type="submit" value="Create" class="btn btn-primary" />
						</div>



					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
