@model SaborCajabambino.Models.Inventario

@{
	ViewData["Title"] = "Delete";
}

<
<link href="~/css/deleteStyle.css" rel="stylesheet" />
<div class="d-flex justify-content-center"><span class="badge bg-danger my-1 rounded"><h3>¿Estás seguro que quieres eliminar este registro?</h3></span></div>

<div class="d-flex justify-content-center align-items-center ">
	<div class="card shadow">
		<div class="card-header">
			<span class="badge bg-warning my-4 rounded d-flex justify-content-center">
				<span class="badge bg-warning rounded"><h4>Item - @Model.IdItem</h4></span>
			</span>
		</div>
		<div class="card-body">
			<div>

				<dl class="row">
					<dt class="col-sm-6">
						Nombre
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.ItemNombre)
					</dd>
					<dt class="col-sm-6">
						Unidad de medida
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.UnidadMedida)
					</dd>
					<dt class="col-sm-6">
						Cantidad en Stock
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.Stock)
					</dd>
					<dt class="col-sm-6">
						Costo por Unidad
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.CostoPorUnidad)
					</dd>
					<dt class="col-sm-6">
						Fecha de expiración
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.FechaDeExpiracion)
					</dd>
					<dt class="col-sm-6">
						Nivel mínimo de Reorden
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.NivelReorden)
					</dd>
					<dt class="col-sm-6">
						Cantidad a Reordenar
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.CantidadReorden)
					</dd>
					<dt class="col-sm-6">
						¿Necesita Reorden?
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.NecesitaReorden)
					</dd>
					<dt class="col-sm-6">
						Categoría
					</dt>
					<dd class="col-sm-6">
						@Html.DisplayFor(model => model.IdItemCategoriaNavigation.Categoria)
					</dd>
				</dl>

				<form asp-action="Delete">
					<input type="hidden" asp-for="IdItem" />
					<input type="submit" value="Eliminar" class="btn btn-danger" />
					<p class="mt-3"><strong>Nota:</strong> Esta acción no se puede deshacer.</p>
					<span class="badge badge-status bg-warning"><a asp-action="Index">Volver a inventario</a></span>
				</form>
			</div>
		</div>
	</div>
</div>